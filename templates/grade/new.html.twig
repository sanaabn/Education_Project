{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow p-4">
                    <h2 class="mb-4 text-center">Add a Grade</h2>

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.score, 'Score') }}
                            {{ form_widget(form.score, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.student, 'Student') }}
                            {{ form_widget(form.student, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <button class="btn btn-success w-100 mt-3">
                            <i class="fas fa-save"></i> Save Grade
                        </button>
                    {{ form_end(form) }} 

                    <!-- Bouton "Back to assignments" -->
                    <div class="text-center mt-3">
                        <a href="{{ path('app_assignment_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to assignments
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
