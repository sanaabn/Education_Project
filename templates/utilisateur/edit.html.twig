
{% block body %}
<div style="background-color: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); max-width: 600px; margin: 50px auto;">
    <h1 style="text-align: center; text-decoration: underline; color: #333;">Modifier un Utilisateur</h1>
    <p style="text-align: center; color: #555;">Veuillez mettre à jour les informations ci-dessous :</p>

    {# Début du formulaire #}
    {{ form_start(form, {'attr': {'style': 'display: flex; flex-direction: column; gap: 15px;'}}) }}

        {# Champ Nom #}
        <div style="display: flex; flex-direction: column; gap: 5px;">
            {{ form_label(form.nom, 'Nom', {'label_attr': {'style': 'font-weight: bold; color: #555;'}}) }}
            {{ form_widget(form.nom, {'attr': {
                'style': 'padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px; transition: border-color 0.3s ease;',
                'onmouseover': 'this.style.borderColor="#007bff"',
                'onmouseout': 'this.style.borderColor="#ccc"'
            }}) }}
        </div>

        {# Champ Email #}
        <div style="display: flex; flex-direction: column; gap: 5px;">
            {{ form_label(form.email, 'Email', {'label_attr': {'style': 'font-weight: bold; color: #555;'}}) }}
            {{ form_widget(form.email, {'attr': {
                'style': 'padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px; transition: border-color 0.3s ease;',
                'onmouseover': 'this.style.borderColor="#007bff"',
                'onmouseout': 'this.style.borderColor="#ccc"'
            }}) }}
        </div>

        {# Champ Mot de passe #}
        <div style="display: flex; flex-direction: column; gap: 5px;">
            {{ form_label(form.password, 'Mot de passe', {'label_attr': {'style': 'font-weight: bold; color: #555;'}}) }}
            {{ form_widget(form.password, {'attr': {
                'style': 'padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px; transition: border-color 0.3s ease;',
                'onmouseover': 'this.style.borderColor="#007bff"',
                'onmouseout': 'this.style.borderColor="#ccc"'
            }}) }}
        </div>

        {# Champ Type #}
        <div style="display: flex; flex-direction: column; gap: 5px;">
            {{ form_label(form.Type, 'Type', {'label_attr': {'style': 'font-weight: bold; color: #555;'}}) }}
            {{ form_widget(form.Type, {'attr': {
                'style': 'padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px; transition: border-color 0.3s ease;',
                'onmouseover': 'this.style.borderColor="#007bff"',
                'onmouseout': 'this.style.borderColor="#ccc"'
            }}) }}
        </div>

        {# Champ Niveau #}
        <div style="display: flex; flex-direction: column; gap: 5px;">
            {{ form_label(form.Niveau, 'Niveau', {'label_attr': {'style': 'font-weight: bold; color: #555;'}}) }}
            {{ form_widget(form.Niveau, {'attr': {
                'style': 'padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px; transition: border-color 0.3s ease;',
                'onmouseover': 'this.style.borderColor="#007bff"',
                'onmouseout': 'this.style.borderColor="#ccc"'
            }}) }}
        </div>

        {# Champ Matière #}
        <div style="display: flex; flex-direction: column; gap: 5px;">
            {{ form_label(form.Matiere, 'Matière', {'label_attr': {'style': 'font-weight: bold; color: #555;'}}) }}
            {{ form_widget(form.Matiere, {'attr': {
                'style': 'padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px; transition: border-color 0.3s ease;',
                'onmouseover': 'this.style.borderColor="#007bff"',
                'onmouseout': 'this.style.borderColor="#ccc"'
            }}) }}
        </div>

      

    {{ form_end(form) }}

    {# Lien "Retour à la liste des utilisateurs" #}
    <a href="{{ path('afficher_utilisateur') }}" style="display: inline-block; margin-top: 20px; color: #007bff; text-decoration: none; transition: color 0.3s ease;" onmouseover="this.style.color='#0056b3'" onmouseout="this.style.color='#007bff'">
        Retour à la liste des utilisateurs
    </a>
</div>
{% endblock %}